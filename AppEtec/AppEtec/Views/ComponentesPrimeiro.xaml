             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppEtec.Views.ComponentesPrimeiro">
    <ContentPage.Content>
        
        <ScrollView>
            <StackLayout VerticalOptions="CenterAndExpand" Padding="10">
                <Button Clicked="btnBanco" Text="Banco de Dados I" Style="{ StaticResource btn_cinza }" />
                <Button Clicked="btnAnalise" Text="Análise e Projeto de Sistemas" Style="{ StaticResource btn_cinza }" />
                <Button Clicked="btnDesign" Text="Design Digital" Style="{ StaticResource btn_cinza }" />
                <Button Clicked="btnWeb" Text="Programação Web I" Style="{ StaticResource btn_cinza }" />
                <Button Clicked="btnFundamentos" Text="Fundamentos da Informática" Style="{ StaticResource btn_cinza }" />
                <Button Clicked="btnTecnicas" Text="Técnicas de Programação e Algoritmos" Style="{ StaticResource btn_cinza }" />
            </StackLayout>
        </ScrollView>
        
    </ContentPage.Content>
</ContentPage>